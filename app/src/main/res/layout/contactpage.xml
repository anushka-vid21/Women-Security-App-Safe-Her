<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="340dp"
        android:layout_height="500dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="11dp"
        app:cardElevation="11dp"
        app:cardUseCompatPadding="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/add_your_contacts"
            android:layout_marginTop="11dp"
            android:textSize="21sp"
            android:textColor="#090606"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="100dp"
            android:drawableStart="@drawable/baseline_add_ic_call_24"
            android:hint="@string/contact_number"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="#3F51B5"
            android:autofillHints="phone" />

        <EditText
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="102dp"
            android:layout_marginEnd="32dp"
            android:drawableStart="@drawable/baseline_add_ic_call_24"
            android:hint="@string/cn2"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="#3F51B5"
            android:autofillHints="phone" />

        <EditText
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="155dp"
            android:layout_marginEnd="32dp"
            android:drawableStart="@drawable/baseline_add_ic_call_24"
            android:hint="@string/contact_number3"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="#3F51B5"
            android:autofillHints="phone" />

        <EditText
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="210dp"
            android:layout_marginEnd="32dp"
            android:drawableStart="@drawable/baseline_add_ic_call_24"
            android:hint="@string/contact_number4"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="#3F51B5"
            android:autofillHints="phone" />

        <EditText
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="265dp"
            android:layout_marginEnd="32dp"
            android:drawableStart="@drawable/baseline_add_ic_call_24"
            android:hint="@string/contact_number5"
            android:inputType="number"
            android:minHeight="48dp"
            android:textColor="#3F51B5"
            android:autofillHints="phone" />

        <Button
            android:id="@+id/submitbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:layout_marginTop="330dp"
            android:layout_marginStart="100dp"
            android:textStyle="bold"
            android:backgroundTint="#F69506"
            android:textSize="21sp"/>


    </androidx.cardview.widget.CardView>


</LinearLayout>